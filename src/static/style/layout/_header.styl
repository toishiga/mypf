.l-header {
  
  background-color: rgba(white, .5);
  border-bottom: 1px solid rgba($color.black,.4)
  backdrop-filter: blur(4px);
  position:fixed;
  z-index: 99;
  width: 100%;

  top:0;
  transition: all .5s $ease;
  .home & {
    top: -100%;
    transition: all .5s $ease;
  }
  &__inner {
    width: 100%;
    max-width: $pc_con_w;
    padding: 10px ;
    margin: auto;
    display: flex;
    justify-content: space-between;
  }
  &__logo {
    width: 50%;
    font-size: 3.6rem;
    font-family: 'Anton';
  }
  &__nav {
    display: none;
  }
  &__spnav {
    position:absolute;
    background-color: rgba($color.black, .9);
    top: -100vh;
    left: 0;
    padding: 10px;
    width: 100%;
    height: 0;
    color: white;
    transition: all .5s $ease;

    &.is_open{
      top:0;
      display: block;
      height: 100vh;
      transition: all .5s $ease;
      display: flex;
      justify-content: center;
      align-items: center;
      z-index :99;
    }
    ul {
      width: 80%;
      margin: 50px auto;
    }
    a {
      background-color: rgba(gray,.5);
      margin-top: 10px;
      padding: .8em 20px;
      display: block;
      text-align: center;
      font-weight: bold;
      &:hover{
        background-color: rgba(white,.5)
        color: $color.black ;
        transition: .5s $easeOut;
      }
    }
  }
  &__navbtn {
    +pc() {
      display: none;
    }
  }
  &__navckb {
    display: none;
  }
  &__navbtnicon{
  navbtn();
  z-index :999;
  }
  +pc(){
    &__inner {
      justify-content: flex-start;
    }
    &__nav {
      display: block;
    }
    &__link{
      display: flex
      a {
        display: block;
        padding: 10px 20px;
        transition: .5s $easeInOut;
        &:hover {
          background-color: lighten(rgba($color.blue,.5),30%)
          color: white;
        }
        &.router-link-active {
          background-color: lighten(rgba($color.blue,.5),30%)
          color: white;
        }
      }
    }
  }
}
